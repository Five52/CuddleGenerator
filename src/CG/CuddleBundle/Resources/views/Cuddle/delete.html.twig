{% extends 'CGCuddleBundle::layout.html.twig' %}

{% block title %}
    Suppression d'un câlin - {{ parent() }}
{% endblock %}

{% block cgcuddle_main %}
    <h2>Suppression d'un câlin</h2>

    <p>
        Etes-vous sûr de vouloir supprimer le câlin suivant ?
        <br />"{{ cuddle.content }}", par {{ cuddle.author }} le {{ cuddle.date | date('d/m/Y \à H:i') }}
    </p>

    <form action="{{ path('cg_cuddle_delete', {'cuddle_id': cuddle.id}) }}" method="post">
        <a href="{{ path('cg_cuddle_manage') }}">
            <i class="fa fa-chevron-left"></i>
            Retour à la liste des câlins
        </a>
        <button type="submit" class="btn btn-default">
            <i class="fa fa-trash"></i>
            Supprimer
        </button>
        {{ form_rest(form) }}
    </form>
{% endblock %}